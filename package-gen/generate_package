#!/bin/bash

# Package information
PACKAGE_NAME="backup-restore-tool"
VERSION="1.0"
SOURCE_DIR="../"  # The root directory containing the organized package structure
OUTPUT_FILE="../${PACKAGE_NAME}_${VERSION}_all.deb"

# Cleaning up any previous .deb package
echo "üßπ Cleaning up any previous .deb package..."
rm -f "$OUTPUT_FILE"

# Building the package
echo "üõ†Ô∏è  Building the .deb package..."
dpkg-deb --build "$SOURCE_DIR" "$OUTPUT_FILE"

# Confirming success
if [ $? -eq 0 ]; then
  echo "‚úÖ Package successfully generated: $OUTPUT_FILE"
else
  echo "‚ùå Failed to generate the package."
  exit 1
fi